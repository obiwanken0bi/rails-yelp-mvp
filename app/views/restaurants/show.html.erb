<p>Restaurants#show</p>
<p>Find me in app/views/restaurants/show.html.erb</p>

<div class="container">
  <div class="restaurant-details">
    <h1> <%= @restaurant.name %> </h1>

    <p>Cateogry: <%= @restaurant.category %> </p>
    <p>Address: <%= @restaurant.address %> </p>
    <p> <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%> </p>
  </div>

  <div class="restaurant-reviews">
    <h2>Reviews</h2>
    <div class="review">
      <% @reviews.each do |review| %>
        <p> <%= review.rating %> </p>
        <p> <%= review.content %> </p>
      <% end %>
    </div>
  </div>

  <p> <%= link_to "Return to list", restaurants_path, class: "btn btn-primary"%> </p>
</div>
