<div class="container">
  <h1>Add a review</h1>
  <div class="form">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, class: "input" %>
      <%= f.input :content, class: "input input-rating" %>
      <%= f.submit "Add review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <p> <%= link_to "Cancel", restaurant_path(@restaurant), class: "btn btn-primary btn-cancel"%> </p>
</div>
